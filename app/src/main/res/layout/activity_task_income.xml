<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task_income"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg_color"
    android:orientation="vertical"
    tools:context="com.ddinfo.flashman.activity.task.TaskIncomeActivity">

    <include layout="@layout/navigation_bar_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corners_white"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_QRcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_no_network"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray_bg_color"/>

        <LinearLayout
            android:id="@+id/ll_order_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/light_gray_bg_color"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="订单号:"
                />

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="等待加载中.."
                android:textColor="@color/text_color_deep_gray"
                android:textSize="@dimen/text_size_xx"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray_bg_color"/>

        <LinearLayout
            android:id="@+id/ll_branch_order_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/light_gray_bg_color"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="分流订单号:"
                />

            <TextView
                android:id="@+id/tv_branch_order_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="等待加载中..."
                android:textColor="@color/text_color_deep_gray"
                android:textSize="@dimen/text_size_xx"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray_bg_color"/>

        <LinearLayout
            android:id="@+id/ll_amount"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@color/light_gray_bg_color"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="金额:"
                />

            <TextView
                android:id="@+id/tv_order_income"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="等待加载中.."
                android:textColor="@color/text_color_deep_gray"
                android:textSize="@dimen/text_size_xx"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
