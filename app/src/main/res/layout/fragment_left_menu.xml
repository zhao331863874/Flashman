<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#3686E5">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@mipmap/arrowhead_right" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_user"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/img_user"
                android:text="111111111111"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_menu" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/rel_map_earn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_txt_menu"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:text="到仓确认" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_txt_menu"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:text="交货款" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_txt_menu"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:text="钱包" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_txt_menu"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:text="规则" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_txt_menu"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:text="举报" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/left_txt_menu"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:text="设置" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>