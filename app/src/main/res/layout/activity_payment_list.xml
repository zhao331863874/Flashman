<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_task_all_list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ddinfo.flashman.activity.menu.PaymentListActivity">

    <include layout="@layout/navigation_bar_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray_bg_color"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_top"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            app:tabIndicatorColor="@color/bg_blue"
            app:tabSelectedTextColor="@color/bg_blue"
            app:tabTextAppearance="@style/TextAppearance_Tab" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />
    </LinearLayout>


</LinearLayout>
