<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg_color">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:paddingTop="10dp"
       android:layout_margin="10dp"
       android:background="@drawable/corners_white"
       >
       <TextView
           android:id="@+id/tv_junior_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="张三"
           android:textColor="@color/text_color_blue"/>

       <TextView
           android:id="@+id/tv_junior_tel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:textColor="@color/text_color_deep_gray"/>

       <TextView
           android:id="@+id/tv_amount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_junior_tel"
           android:layout_marginTop="5dp"
           android:textColor="@color/text_color_deep_gray"
           android:text="授信额度："/>

       <TextView
           android:id="@+id/tv_frozen"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_junior_name"
           android:layout_marginTop="5dp"
           android:layout_alignParentRight="true"
           android:textColor="@color/text_color_deep_gray"
           android:text="冻结金额："/>

       <TextView
           android:id="@+id/tv_take_amount"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_amount"
           android:layout_marginTop="5dp"
           android:textColor="@color/text_color_deep_gray"
           android:text="可接货额度："/>

       <TextView
           android:id="@+id/tv_frozen_detail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_amount"
           android:layout_marginTop="5dp"
           android:textColor="@color/text_color_red"
           android:layout_alignParentRight="true"
           android:text="冻结明细"/>

       <View
           android:id="@+id/view_line"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/line_gray_high"
           android:layout_below="@+id/tv_take_amount"
           android:layout_marginTop="10dp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:layout_below="@+id/view_line">
           <TextView
               android:id="@+id/tv_set_amount"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center"
               android:textColor="@color/text_color_blue"
               android:textSize="@dimen/text_size_xxx"
               android:text="授信"/>
           
           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:background="@color/line_gray_high"/>

           <TextView
               android:id="@+id/tv_delivery_mes"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center"
               android:textColor="@color/text_color_blue"
               android:textSize="@dimen/text_size_xxx"
               android:text="配送完成情况"/>

       </LinearLayout>



   </RelativeLayout>



</LinearLayout>