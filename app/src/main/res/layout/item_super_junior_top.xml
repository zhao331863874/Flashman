<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/text_goods_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的接货额度:"
            android:textColor="@color/text_color_deep_gray"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_goods_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:layout_toRightOf="@+id/text_goods_amount"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color_red"
            android:layout_centerVertical="true"
            />
        
        <ImageView
            android:id="@+id/iv_qrCode"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">
       <TextView
           android:id="@+id/tv_junior_sum"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="下级配送员人数：3"
           android:textColor="@color/text_color_deep_gray"/>

        <TextView
                android:id="@+id/tv_amount_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总授信额度：20000"
            android:layout_below="@+id/tv_junior_sum"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_deep_gray"/>

        <TextView
            android:id="@+id/text_frozen_sum"
            android:layout_toLeftOf="@+id/tv_frozen_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总冻结金额："
            android:layout_alignBaseline="@+id/tv_amount_sum"
            android:textColor="@color/text_color_deep_gray"/>

        <TextView
            android:id="@+id/tv_frozen_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/tv_amount_sum"
            android:textColor="@color/text_color_red"/>
    </RelativeLayout>



</LinearLayout>