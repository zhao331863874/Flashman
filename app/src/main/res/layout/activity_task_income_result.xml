<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task_income_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray_bg_color"
    tools:context="com.ddinfo.flashman.activity.task.TaskIncomeResultActivity">
    <include layout="@layout/navigation_bar_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/corners_white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_pay_success"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tv_order_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未获取到金额"
            android:textColor="@color/text_color_orange"
            android:textSize="@dimen/text_size_number"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_pay_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收款成功"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_xxx"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray_bg_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/light_gray_bg_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="交易单号:"
                />

            <TextView
                android:id="@+id/tv_order_income_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="345345345"
                android:textColor="@color/text_color_deep_gray"
                android:textSize="@dimen/text_size_xx"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray_bg_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/light_gray_bg_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="交易时间:"
                />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="2015.09.09"
                android:textColor="@color/text_color_deep_gray"
                android:textSize="@dimen/text_size_xx"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray_bg_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@color/light_gray_bg_color"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="订单号:"
                />

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="213123123243345435"
                android:textColor="@color/text_color_deep_gray"
                android:textSize="@dimen/text_size_xx"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
