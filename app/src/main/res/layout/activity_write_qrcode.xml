<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ddinfo.flashman.activity.task.WriteQRCodeActivity">

    <include layout="@layout/navigation_bar_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/light_gray_bg_color"
        >
        <EditText
            android:id="@+id/et_write_code"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="填写条码下方单号"
            android:background="@drawable/corners_white"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_blue"
        android:gravity="center"
        android:text="完 成"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xx"
        />

</LinearLayout>
